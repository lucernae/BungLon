<MainMenuScreen>:
    main_menu_label: main_menu_label
    name: 'main menu'
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: main_menu_label
            text: 'main menu'
            font_size: 30
            center: self.center
        Button:
            text: 'play normal'
            on_press: root.play_normal(self)
        Button:
            text: 'play question blind mode'
            on_press: root.play_blind(self)


<GameScreen>:
    name: 'game screen'
    score_text: score_text
    red_slider: red_slider
    green_slider: green_slider
    blue_slider: blue_slider
    color_text: color_text
    color_answer: color_answer
    color_guess: color_guess
    effect_text: effect_text
    red_preview: red_preview
    green_preview: green_preview
    blue_preview: blue_preview
    guess_button: guess_button
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            height: 40
            Label:
                id: score_text
                text: 'score : 100'
        GridLayout:
            cols: 2
            BoxLayout:
                orientation: 'vertical'
                Label:
                    id: color_answer
                    text: 'answer'
                    font_size: 30
                    size_hint_x: 1
                    size_hint_y: 1
                    canvas.before:
                        Color:
                            rgb: 0,0,0
                        Rectangle:
                            size: self.size
                            pos: self.pos
                Label:
                    text: 'guess'
                    id: color_guess
                    font_size: 30
                    size_hint_x: 1
                    size_hint_y: 1
                    canvas.before:
                        Color:
                            rgb: 0,0,0
                        Rectangle:
                            size: self.size
                            pos: self.pos
            BoxLayout:
                orientation: 'vertical'
                Label:
                    id: color_text
                    text: 'color'
                    font_size: 30
                    size_hint_y: 0.1
                BoxLayout:
                    orientation: 'vertical'
                    padding: '40dp'
                    BoxLayout:
                        padding: '5dp'
                        BoxLayout:
                            Slider:
                                id: red_slider
                                min: 0
                                max: 255
                                value: 255
                                size_hint_x: None
                                width: self.parent.width-10
                                orientation: 'horizontal'
                                on_touch_move: root.preview_color(self)
                                on_touch_down: root.preview_color(self)
                                on_touch_up: root.preview_color(self)
                        Widget:
                            id: red_preview
                            size_hint_x: None
                            width: self.height
                            canvas:
                                Color:
                                    rgb: 1,0,0
                                Rectangle:
                                    size: self.size
                                    pos: self.pos
                    BoxLayout:
                        padding: '5dp'
                        BoxLayout:
                            Slider:
                                id: green_slider
                                min: 0
                                max: 255
                                value: 255
                                size_hint_x: None
                                width: self.parent.width-10
                                orientation: 'horizontal'
                                on_touch_move: root.preview_color(self)
                                on_touch_down: root.preview_color(self)
                                on_touch_up: root.preview_color(self)
                        Widget:
                            id: green_preview
                            size_hint_x: None
                            width: self.height
                            canvas:
                                Color:
                                    rgb: 0,1,0
                                Rectangle:
                                    size: self.size
                                    pos: self.pos
                    BoxLayout:
                        padding: '5dp'
                        BoxLayout:
                            Slider:
                                id: blue_slider
                                min: 0
                                max: 255
                                value: 255
                                size_hint_x: None
                                width: self.parent.width-10
                                orientation: 'horizontal'
                                on_touch_move: root.preview_color(self)
                                on_touch_down: root.preview_color(self)
                                on_touch_up: root.preview_color(self)
                        Widget:
                            id: blue_preview
                            size_hint_x: None
                            width: self.height
                            canvas:
                                Color:
                                    rgb: 0,0,1
                                Rectangle:
                                    size: self.size
                                    pos: self.pos
                    BoxLayout:
                        padding: '5dp'
                        Button:
                            id: guess_button
                            text: 'Guess'
                        Button:
                            text: 'Exit to main menu'
                            on_press: root.back_to_main(self)
    Label:
        id: effect_text
        text: 'Effect'
        color: 1,1,1,0
        size_hint: (None, None)
        center: root.center